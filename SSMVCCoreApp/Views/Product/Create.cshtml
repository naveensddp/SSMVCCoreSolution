@model Product
@{
  ViewData["Title"] = "Create";
}
<style>
  .labelWidth {
    width: 120px;
  }
</style>
<h4>Create New Product</h4>
<div class="row container-fluid">
  <form asp-controller="Product" asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div class="form-group">
      <label asp-for="ProductName" class="labelWidth">Product Name:</label>
      <input asp-for="ProductName" class="form-control" />
      <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
    <div class="form-group">
      <label asp-for="Description" class="labelWidth">Description:</label>
      <input asp-for="Description" class="form-control" />
      <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
      <label asp-for="Price" class="labelWidth">Price:</label>
      <input asp-for="Price" class="form-control" />
      <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
      <label asp-for="Category" class="labelWidth">Category:</label>
      <input asp-for="Category" class="form-control" />
      <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="form-group">
      <label for="Photo" class="labelWidth">Photo</label>
      <input type="file" name="Photo" />
    </div>
    <div class="form-group text-center">
      <input type="submit" value="Create Product" class="btn btn-outline-primary" />
      <a asp-controller="Product" asp-action="Index" class="btn btn-outline-info">All Products</a>
    </div>
  </form>
</div>